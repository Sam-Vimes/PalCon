        function drawSurfacePath(planet1, planet2, shape)
        {
            console.log(planet2);
            console.log(planet2);
            x = planet1.x;
            y = planet1.y;
            xd = (planet2.x - x);
            yd = (planet2.y - y);
            var dist = Math.sqrt(xd * xd + yd * yd);
            startRadProportion = planet1.radius / dist;
            startCuttoffX = xd * startRadProportion;
            startCuttoffY = yd * startRadProportion;
            x = x + startCuttoffX;
            y = y + startCuttoffY;
            endRadProportion = planet2.radius / dist;
            xd = xd - xd * endRadProportion - startCuttoffX;
            yd = yd - yd * endRadProportion - startCuttoffY;
            shape.graphics.moveTo(0, 0);
            shape.graphics.lineTo(xd, yd);
            shape.x = x;
            shape.y = y;
            console.log('drawing ' + x + ',' + y + ' to ' + xd);
        }

