        function processGameBoard(planetArray) {
            for (idx in planetArray) {
                var j = planetArray[idx];
                var p = new Planet(j.growth, j.x * globalscale * 10, j.y * globalscale * 10, j.pop, j.owner);
                planets.push(p);
