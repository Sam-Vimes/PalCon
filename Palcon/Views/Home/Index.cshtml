        function doSend() {
            stage.removeChild(sendPercentBar);
            var planet = sendDestPlanet;
            if (highlightedPlanet && highlightedPlanet.owner == ownerIndex && planet != highlightedPlanet) {

                var pop = Math.round(highlightedPlanet.pop / 100 * sendPercent);

                if (pop >= 1 && pop < highlightedPlanet.pop) {
                    //console.log('sending ' + pop + ' remaning: ' + highlightedPlanet.pop - pop);
                    queuedCommands.push(
                        {
                            owner: ownerIndex,
