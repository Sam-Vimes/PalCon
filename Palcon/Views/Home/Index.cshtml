                    var f = new Fleet(pop, fromPlanet, toPlanet, c.owner);
                    fleets.push(f);
                    fromPlanet.pop -= pop;
                }
                else {
                    console.log('not enough population to execute command');
                }
            }
            incomingCommands = null;
            //console.log('sent queue & handled incoming, tick ' + tickInTurn);
        }

